@page
@model PrivacyModel
@{
    ViewData["Title"] = "Alec Rules";
}
<h1>@ViewData["Title"]</h1>


<!--Begin input form, values will be posted in table underneath-->

       <div class="col-md-9 mb-md-0 mb-5">
            <form id="contact-form" name="contact-form" method="POST">

                <!--Grid row-->
                <div class="row">

                    <!--Grid column-->
                    <div class="col-md-6">
                        <div class="md-form mb-0">
                            <label for="fName" class="">Your first name</label>
                            <input type="text" asp-for="fName" class="form-control">
                        </div>
                    </div>
                    <!--Grid column-->

                    <!--Grid column-->
                    <div class="col-md-6">
                        <div class="md-form mb-0">
                            <label for="lName" class="">Your last name</label>
                            <input type="text" asp-for="lName" class="form-control">                          
                        </div>
                    </div>
                    <!--Grid column-->

                </div>
                <!--Grid row-->

                <!--Grid row-->
                <div class="row">
                    <div class="col-md-12">
                        <div class="md-form mb-0">
                            <label for="message" class="">Message</label>
                            <input type="text" asp-for="message" class="form-control">                          
                        </div>
                    </div>
                </div>

            <div class="text-center text-md-left">
                <input type="submit"  asp-page-handler="Submit" value="Post"/><br /><br />
            </div>
                </form>




<!--Begin table-->
<table class="table" method="post">
  <thead>
    <tr>
        <th scope="col">Id</th>
      <th scope="col">First</th>
      <th scope="col">Last</th>
      <th scope="col">Message</th>
    </tr>
  </thead>
  <tbody>

            @{
                int iterator = 1;
                foreach(var s in @Model.displayItem)
                    {
                        <!--Cant figure out how to reference the current first and last name from here to the model page.
                        I think that is all that's missing. how to know what iteration displayItem is at?-->
                        <tr>
                        <td>@iterator</td>
                          <td>@s.FirstName</td>
                          <td>@s.LastName</td>
                          <td>@s.Message</td>
                          <td>
                             <form style="background-color:red" asp-route-id=@iterator asp-page-handler="Remove" method="post">
                                <input type="hidden" value="@iterator" name="iteration"/> 
                                <button class="btn btn-default">Remove</button></form>
                          </td>
                    </tr>
                    iterator++;
                }
                }
  </tbody>
</table>
